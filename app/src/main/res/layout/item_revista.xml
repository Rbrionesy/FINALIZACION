<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Ícono de la revista -->
        <ImageView
            android:id="@+id/revistaIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/revista_placeholder"
            android:contentDescription="Ícono de la revista"
            android:layout_marginEnd="16dp" />

        <!-- Contenido de la revista -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:id="@+id/revistaTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Resumen -->
            <TextView
                android:id="@+id/revistaResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textColor="#1B1919"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <!-- Ícono de acción -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/gradient_background"
            android:tint="#00FDFCFC"
            android:contentDescription="Abrir revista" />
    </LinearLayout>
</androidx.cardview.widget.CardView>